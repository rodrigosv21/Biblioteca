<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cadastro de Livros</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <style>
      body {
        background: rgb(245, 241, 241);
        background: linear-gradient(
          27deg,
          rgba(245, 241, 241, 1) 25%,
          rgba(131, 137, 139, 1) 80%,
          rgba(0, 0, 0, 0.3225665266106442) 96%
        );
        padding: 0;
        margin: 0;
      }
      .fundo {
        background-color: #ffffff75;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-top: 150px;
      }
      .form {
        text-align: center;
      }
      #titulo, #autor, #generos, #npgs {
        border-radius: 10px;
        margin-bottom: 15px;
        width: 100%;
      }
      .button, #registrar {
        margin-top: 20px;
        width: 100px;
        padding: 10px;
        border-radius: 10px;
        background-color: #180f4a;
        color: white;
        border: none;
      }
      #registrar:hover {
        background: rgb(92, 90, 87);
      }
      input::placeholder {
        color: #000;
      }
      #Cima{
        position: fixed;
        top: 10px;
        right: 5px;
      }
      
      @media (max-width: 768px) {
        .fundo {
          padding: 20px;
        }
        #titulo, #autor, #generos, #npgs {
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">
          <div class="fundo">
            <form class="form" action="/cadastrarlivros" method="post">
              <fieldset>
                <legend>Cadastrar Livros</legend>
                <label for="titulo"></label>
                <input name="titulo" type="text" id="titulo" placeholder="Título" required />
                <label for="autor"></label>
                <input name="autor" type="text" id="autor" placeholder="Autor" required />
                <label for="generos"></label>
                <select name="generos" id="generos" required>
                  <option disabled selected>Gênero</option>
                  <option value="Narrativo">Narrativo</option>
                  <option value="Lirico">Lírico</option>
                  <option value="Dramático">Dramático</option>
                  <option value="Ficção">Ficção</option>
                  <option value="Ciência ficção">Ciência Ficção</option>
                  <option value="Terror">Terror</option>
                  <option value="Mistério">Mistério</option>
                  <option value="Romance">Romance</option>
                </select>
                <label for="npgs"></label>
                <input name="npaginas" id="npgs" type="number" placeholder="Número de Páginas" required />
                <button class="button" id="registrar" type="submit">Cadastrar</button>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
      <div class="text-center mt-4">
        <button id="cima" type="button" class="btn btn-secondary" onclick="ver()">Ver Logs</button>
      </div>
    </div>

    <script>
      function ver() {
        window.location.href = "/registros";
      }
    </script>
  </body>
</html>
