<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </head>
  <style>
    body{ background: linear-gradient(27deg, rgba(255,255,255,1) 0%,
    rgba(175,0,255,1) 99%);; } .fundo{ background: linear-gradient(27deg,
    rgba(255,255,255,1) 0%, rgba(175,0,255,1) 99%); height: 350px; width: 400px;
    margin: auto; margin-top: 100px; padding: 80px 30px 20px 30px;
    border-radius: 30px;} .form{ text-align: center; margin-top: 25px; border:
    none;} #email, #senha{ border-radius: 10px; background-color: #a456d6;
    text-align: center;} #button{ margin-top: 1px; border: none; background:
    linear-gradient(27deg, rgba(255,255,255,1) 0%, rgba(175,0,255,1) 99%);}
    input::placeholder{ color: #000000} #button{ border-radius: 10px; }
  </style>

  <body>
    <div class="fundo">
      <div class="col-6 offset-3">
        <form class="form" action="/login/entrar" method="post">
          <label for="email"></label>
          <br />
          <input
            type="email"
            name="gmail"
            class="form-control"
            id="email"
            maxlength="25"
            placeholder="E-mail"
          />
          <br />
          <label for="senha"></label>
          <br />
          <input
            type="password"
            name="password"
            class="form-control"
            id="senha"
            maxlength="16"
            placeholder="Password"
          />
          <br />
          <button type="submit" id="button"> Enter </button>

        </form>
      </div>
    </div>

  </body>
</html>