  <style>
    body{ background: linear-gradient(27deg, rgba(255,255,255,1) 0%,
    rgba(175,0,255,1) 99%); } .fundo{ background: linear-gradient(27deg,
    rgba(255,255,255,1) 0%, rgba(175,0,255,1) 99%); height: 350px; width: 400px;
    margin: auto; margin-top: 100px; padding: 80px 30px 20px 30px;
    border-radius: 30px;} .form{ text-align: center; margin-top: 10px; border:
    none;} #nome, #email, #senha{ border-radius: 10px; background-color:
    rgba(255,255,255,1) 0%; text-align: center; } .button{border: none;
    linear-gradient(27deg, rgba(255,255,255,1) 0%, rgba(175,0,255,1) 99%); }
    #button{ margin-top: 1px; border: none; linear-gradient(27deg,
    rgba(255,255,255,1) 0%, rgba(175,0,255,1) 99%); border-radius: 10px;}
    #button2{ border-radius: 10px; margin-top: 10px; } input::placeholder{
    color: #000000; } input{ linear-gradient(27deg, rgba(255,255,255,1) 0%,
    rgba(175,0,255,1) 99%); border-color: #aa61e1; } #ic{margin: 300px; }
  </style>

  <body>
    <div class="fundo">
      <div class="col-6 offset-3">

        <form class="form" action="/login" method="post" class="cds">
          <label for="nome"></label>
          <br />
          <input
            type="text"
            name="name"
            class="form-control"
            id="nome"
            maxlength="10"
            placeholder="name"
          />
          <br />
          <label for="email"></label>
          <br />
          <input
            type="email"
            name="gmail"
            class="form-control"
            id="email"
            maxlength="25"
            placeholder="E-mail"
          />
          <br />
          <label for="senha"></label>
          <br />
          <input
            type="password"
            name="password"
            class="form-control"
            id="senha"
            maxlength="16"
            placeholder="Password"
          />
          <br />
          <button type="submit" id="button"> Register </button>
          <br />
          <button id="button2" type="button" class="button" onclick="cad()">
            I already have a login
          </button>
        </form>
      </div>
    </div>

    <script>
      function cad(){ window.location.href = 'entrar' }
    </script>
  </body>
