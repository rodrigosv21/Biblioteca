<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <style>
      * {
        margin-top: 5px;
      }
      body {
        background: rgb(245, 241, 241);
        background: linear-gradient(
          27deg,
          rgba(245, 241, 241, 1) 25%,
          rgba(131, 137, 139, 1) 80%,
          rgba(0, 0, 0, 0.3225665266106442) 96%
        );
        margin: 0;
        padding: 0;
      }
      .card {
        background-color: bisque;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      .card-body {
        padding: 15px;
      }
      .produtos p {
        padding-left: 30px;
        margin-bottom: 10px;
      }
      .produtos p strong {
        color: #333;
      }
      #b1, #b2 {
        margin-top: 10px;
        width: 100%;
        text-align: center;
        padding: 10px;
        border-radius: 5px;
      }  
      #b1 {
        background-color: #f0ad4e;
      }
      #b2 {
        background-color: #d9534f;
      }

      #Cima{
        position: fixed;
        top: 10px;
        right: 5px;
      }
      /* Responsividade */
      @media (max-width: 768px) {
        .produtos p {
          padding-left: 15px;
        }
      }
    </style>
  </head>
  <body>
    <div class="container py-5">
      <div class="row">
        <!-- Colunas para os livros, 3 por linha -->
        <% livros.forEach(livro => { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card mb-4">
            <div class="card-body produtos">
              <p><strong>TÍTULO:</strong> <%= livro.titulo %></p>
              <p><strong>AUTOR:</strong> <%= livro.autor %></p>
              <p><strong>GENÊRO:</strong> <%= livro.generos %></p>
              <p><strong><abbr title="DIGITE O NÚMERO DE PÁGINAS">NPGS:</abbr></strong> <%= livro.npaginas %></p>
              <a href="/editarlivros/<%= livro.id %>" class="btn" id="b1">Alterar</a>
              <a href="/remover/<%= livro.id %>" class="btn" id="b2">Excluir</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <div class="text-center mt-4">
      <button id="cima" type="button" class="btn btn-secondary" onclick="ver()">Voltar</button>
    </div>
    <script>
      function ver() {
        window.location.href = "/cadastrarLivros";
      }
    </script>
  </body>
</html>
