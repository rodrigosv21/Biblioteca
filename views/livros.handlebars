<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <style>
      body{ background: linear-gradient(27deg, rgba(255,255,255,1) 0%,
      rgba(175,0,255,1) 99%); } .fundo{ background: linear-gradient(27deg,
      rgba(255,255,255,1) 0%, rgba(175,0,255,1) 99%);; height: 350px; width:
      400px; margin: auto; margin-top: 100px; padding: 80px 30px 20px 30px;
      border-radius: 30px;} .form{ text-align: center; margin-top: 30px; border:
      none;} #autor, #titulo, #generos, #npgs{ border-radius: 10px; }
      .button{border: none; background: linear-gradient(27deg,
      rgba(255,255,255,1) 0%, rgba(175,0,255,1) 99%); margin-top: 10px; }
      #button{ margin-top: 10px; border: none; background:
      linear-gradient(27deg, rgba(255,255,255,1) 0%, rgba(175,0,255,1) 99%); }
      #registrar{ margin-top: 15px; } input::placeholder{ color: #000000; }
      input{ background: linear-gradient(27deg, rgba(255,255,255,1) 0%,
      rgba(175,0,255,1) 99%);; border-color: #aa61e1;} #titulo, #autor{ margin:
      0 100px 10px 0; } #generos{margin-left: 20px; background:
      linear-gradient(27deg, rgba(255,255,255,1) 0%, rgba(175,0,255,1) 99%);;}
      #npgs{width: 90px;}

    </style>
  </head>
  <body>
    <div class="fundo">
      <form class="form" action="/cadastrarlivros" method="post">
        <fieldset>
          <legend>Register books</legend>
          <label for="titulo"></label>
          <br />
          <input name="titulo" type="text" id="titulo" placeholder="Title" />
          <br />
          <label for="autor"></label>
          <br />
          <input name="autor" type="text" id="autor" placeholder="Autor" />
          <br />
          <label for="generos"></label>
          <br />
          <select name="generos" id="generos">
            <option disabled>Genres</option>
            <option value="Narrativo">Narrative</option>
            <option value="Lirico">Lyrical</option>
            <option value="Dramático">Dramatic</option>
            <option value="Ficção">Fiction</option>
            <option value="Ciência ficção">Science fiction</option>
            <option value="Terror">Terror</option>
            <option value="Mistério">Mystery</option>
            <option value="Romance">Romance</option>
          </select>

          <label for="npgs"> </label>
          <input name="npaginas" id="npgs" type="number" placeholder="npages" />
          <br />

          <button class="button" id="registrar" type="submit">Register</button>

        </fieldset>
      </form>
    </div>

    <div>
      <button type="button" onclick="ver()">View Logs</button>
    </div>

    <script>
      function ver(){ window.location.href = '/registros' }
    </script>

  </body>
</html>